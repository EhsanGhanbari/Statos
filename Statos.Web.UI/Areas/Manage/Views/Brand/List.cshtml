@model IEnumerable<Statos.Service.Products.BrandViewModel>
@{
    ViewBag.Title = "List";
    Layout = "../../Views/Shared/_ManageLayout.cshtml";
}

@section BrandSideBar
    {
    @Html.ActionLink("List of all brands", "List", "Brand")
    @Html.ActionLink("Creat New Brand", "Create", "Brand")
}


<script src="../../../../Scripts/Manage/jquery.js"></script>

<br />
<br />
<table cellpadding="0" cellspacing="0" id="BrandTable">
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(c => item.Name)</td>
            <td class="action">
                @Html.ActionLink("Edit", "Edit", "Brand", new { brandId = item.BrandId }, null)
                @Html.ActionLink("Delete", "Delete", "Brand", new { brandId = item.BrandId},new { @class = "delete"})
            </td>
        </tr>
    }
</table>
<br />
<br />


<script type="text/javascript">
    $(function () {
        $(".delete").click(function (e) {
            e.preventDefault();
            var link = this.href;
            $.ajax({
                type: 'Post',
                url: link,
                success: function(data) {
                }
            });
        });
    })
</script>
