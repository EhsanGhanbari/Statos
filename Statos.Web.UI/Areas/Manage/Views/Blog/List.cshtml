@model IEnumerable<statos.service.blogs.blogviewmodel>
    @{
        ViewBag.Title = "List";
        Layout = "~/Areas/Manage/Views/Shared/_ManageLayout.cshtml";

    }
    @section BlogSideBar
    {
        @Html.ActionLink("List of all Blogs", "List", "Blog")
        @Html.ActionLink("Creat New Blog", "Create", "Blog")
    }

    <table cellpadding="0" cellspacing="0">
        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @Html.ActionLink(item.ShortTitle + "...", "Post", "Blog", new { postId = item.PostId }, null)
                </td>
                <td>
                    @item.CreationTime.ToLongDateString()
                </td>
                <td class="action">
                    @Html.ActionLink("Edit", "Edit", "Blog", new { postId = item.PostId }, null)
                    @Html.ActionLink("Delete", "Delete", "Blog", new { postId = item.PostId }, new { @class = "delete" })
                </td>
            </tr>
        }
    </table>
    <br />
    <br />



    <script type="text/javascript">
        $(function () {
            $(".delete").click(function (e) {
                e.preventDefault();
                var link = this.href;
                $.ajax({
                    type: 'Post',
                    url: link,
                    success: function (data) { }
                });
            });
        })
    </script>
