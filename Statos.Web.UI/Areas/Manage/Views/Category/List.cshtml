@model IEnumerable<Statos.Service.Categories.CategoryViewModel>
@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Manage/Views/Shared/_ManageLayout.cshtml";
}

@section CategorySideBar
    {
    @Html.ActionLink("List of all Categories", "List", "Category")
    @Html.ActionLink("Creat New Category", "Create", "Category")
}


<br />
<br />

<table cellpadding="0" cellspacing="0">
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(c => item.Name)</td>
            <td class="action">
                @Html.ActionLink("Edit", "Edit", "Category", new { categoryId = item.CategoryId }, null)
                @Html.ActionLink("Delete", "Delete", "Category", new { categoryId = item.CategoryId }, new { @class = "delete" })
            </td>
        </tr>
    }
</table>

<br />
<br />


<script type="text/javascript">
    $(function () {
        $(".delete").click(function (e) {
            e.preventDefault();
            var link = this.href;
            $.ajax({
                type: 'Post',
                url: link,
                success: function (data) { }
            });
        });
    })
</script>

